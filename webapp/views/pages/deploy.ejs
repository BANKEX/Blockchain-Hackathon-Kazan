<% layout('../layout') -%>
<h1>Создание контракта ипотечной закладной</h1>
<hr>
<div class="col-md-10 col-md-offset-1">
    <form class="form-horizontal">
        <div class="form-group">
            <label for="bank" class="col-sm-2 control-label">Банк</label>
            <div class="col-sm-10">
                <div class="input-group">
                    <input type="text" class="form-control" id="bank" placeholder="Адрес банка" value="<%= bank %>">
                    <span class="input-group-btn"><button type="button" class="btn btn-default" onclick="setMetamaskAddress(this)" title="Получить из Metamask">@</button></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="borrower" class="col-sm-2 control-label">Заёмщик</label>
            <div class="col-sm-10"> 
                <div class="input-group">
                    <input type="text" class="form-control" id="borrower" placeholder="Адрес заёмщика" value="<%= borrower %>">
                    <span class="input-group-btn"><button type="button" class="btn btn-default" onclick="setMetamaskAddress(this)" title="Получить из Metamask">@</button></span>
                </div>
            </div>
        </div>
        <div class="form-group" id="extra">
            <div class="col-sm-10 col-sm-offset-2"><button type="button" class="btn btn-sm btn-default" onclick="addCoborrower()">&plus;</button></div>
        </div>
        <div class="form-group">
            <label for="depository" class="col-sm-2 control-label">Депозитарий</label>
            <div class="col-sm-10">
                <div class="input-group">
                    <input type="text" class="form-control" id="depository" placeholder="Адрес депозитария" value="<%= depository %>">
                    <span class="input-group-btn"><button type="button" class="btn btn-default" onclick="setMetamaskAddress(this)" title="Получить из Metamask">@</button></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="depository" class="col-sm-2 control-label">Росреестр</label>
            <div class="col-sm-10">
                <div class="input-group">
                    <input type="text" class="form-control" id="registry" placeholder="Адрес Росреестра" value="<%= registry %>">
                    <span class="input-group-btn"><button type="button" class="btn btn-default" onclick="setMetamaskAddress(this)" title="Получить из Metamask">@</button></span>
                </div>
            </div>
        </div>
        <hr>
        <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
                <button type="button" class="btn btn-success" onclick="alert('ok');">Опубликовать</button>
            </div>
        </div>
    </form>
</div>