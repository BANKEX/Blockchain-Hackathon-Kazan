<% layout('../layout') -%>
<h1>Mortgate Bond Contract Deployment</h1>
<hr>
<div class="col-md-10 col-md-offset-1">
    <form id="deploy" class="form-horizontal">
        <div class="form-group">
            <label for="bank" class="col-sm-2 control-label">Bank</label>
            <div class="col-sm-10">
                <div class="input-group">
                    <input type="text" class="form-control" id="bank" placeholder="Адрес банка" name="bank" value="<%= bank %>">
                    <span class="input-group-btn"><button type="button" class="btn btn-default" onclick="setMetamaskAddress(this)" title="Получить из Metamask">@</button></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="borrower" class="col-sm-2 control-label">Borrower</label>
            <div class="col-sm-10"> 
                <div class="input-group">
                    <input type="text" class="form-control" id="borrower" placeholder="Адрес заёмщика" name="borrower" value="<%= borrower %>">
                    <span class="input-group-btn"><button type="button" class="btn btn-default" onclick="setMetamaskAddress(this)" title="Получить из Metamask">@</button></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="depository" class="col-sm-2 control-label">Depository</label>
            <div class="col-sm-10">
                <div class="input-group">
                    <input type="text" class="form-control" id="depository" placeholder="Адрес депозитария" name="depository" value="<%= depository %>">
                    <span class="input-group-btn"><button type="button" class="btn btn-default" onclick="setMetamaskAddress(this)" title="Получить из Metamask">@</button></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="depository" class="col-sm-2 control-label">State Registry</label>
            <div class="col-sm-10">
                <div class="input-group">
                    <input type="text" class="form-control" id="registry" placeholder="Адрес Росреестра" name="registry" value="<%= registry %>">
                    <span class="input-group-btn"><button type="button" class="btn btn-default" onclick="setMetamaskAddress(this)" title="Получить из Metamask">@</button></span>
                </div>
            </div>
        </div>
        <hr>
        <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
                <button type="submit" class="btn btn-success">Deploy<span id="spinner"><i class="fa fa-spinner fa-spin"></i></span></button>
            </div>
        </div>
    </form>
</div>