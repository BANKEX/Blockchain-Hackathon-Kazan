<% layout('../layout') -%>
<h1>Mortgage Bond Finalization<br><span class="text-muted"><%= address %></span></h1>
<hr>
<h2>Finalization Status</h2>
<br>
<div class="col-md-10 col-md-offset-1">
    <form id="finalization" class="form-horizontal">
        <div class="form-group" style="display: none" id="fin-step-1">
            <label class="col-sm-2 control-label text-muted">Pawnbroker</label>
            <label class="col-sm-8 form-control-static">Obligations repaid</label>
            <div class="col-sm-2">
                <i class="fa fa-2x fa-check-square-o"></i>
            </div>
        </div>
        <div class="form-group" style="display: none" id="fin-step-2">
            <label class="col-sm-2 control-label text-muted">Pledgor</label>
            <label class="col-sm-8 form-control-static">Approved</label>
            <div class="col-sm-2">
                <i class="fa fa-2x fa-check-square-o"></i>
            </div>
        </div>
        <div class="form-group" style="display: none" id="fin-step-3">
            <label class="col-sm-2 control-label text-muted">State Registry</label>
            <label class="col-sm-8 form-control-static">Withdrawal of encumbrances</label>
            <div class="col-sm-2">
                <i class="fa fa-2x fa-check-square-o"></i>
            </div>
        </div>
        <div class="form-group" id="fin-progress">
            <label class="col-sm-2 control-label text-muted"></label>
            <label class="col-sm-8 form-control-static text-muted">Waiting for —Åounterparty activities</label>
            <div class="col-sm-2">
                <i class="fa fa-spinner fa-spin"></i>
            </div>
        </div>
        <hr>
        <div class="form-group" style="display: none" id="fin-submit">
            <div class="col-sm-10 col-sm-offset-2">
                <button type="submit" class="btn btn-success">Done<span id="spinner"><i class="fa fa-spinner fa-spin"></i></span></button>
            </div>
        </div>
    </form>
</div>